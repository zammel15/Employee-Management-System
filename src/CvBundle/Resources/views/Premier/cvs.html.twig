{% block cvs %}

{% for personne in cvs %}

        <div class="col-lg-4">
            <div class="span3">
                <div class="media user">
                    <a class="media-avatar pull-left" href="#">
                        <img src="/edmin/images/{{personne.getPath()}}">
                    </a>
                    <div class="media-body">
                        <h3 class="media-title">
                            {{personne.getNom()}} {{personne.getPrenom()}}
                        </h3>
                        <p>
                            <small class="muted">{{personne.getAge()}}</small></p>
                        <div class="media-option btn-group shaded-icon">
                            <button class="btn btn-small">


                                        <a href="{{ path('cv_homepage', {'id':personne.getId()})}}">
                                            <i class="icon-envelope">  </i>
                                        </a>


                            </button>

                            <button class="btn btn-small">
                                <a href="{{ path('cv_updatepersform', {'id':personne.getId()})}}">
                                <i class="icon-share-alt"></i>
                                </a>
                            </button>


                            <button class="btn btn-small">
                                <a href="{{ path('cv_deleteperspage', {'id':personne.getId()})}}">

                                    <i class="icon-remove"></i>
                                </a>

                            </button>

                        </div>



                    </div>
                </div>
            </div>
        </div>

